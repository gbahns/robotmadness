{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npx prisma generate --schema=./prisma/schema.postgresql.prisma && next build"
  },
  "deploy": {
    "startCommand": "npx prisma db push --schema=./prisma/schema.postgresql.prisma --skip-generate && NODE_ENV=production tsx server.ts",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}